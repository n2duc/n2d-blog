{
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.donotVerifyTags": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "expand",
    "code-runner.runInTerminal": true,
    "editor.suggest.preview": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.inlineSuggest.enabled": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "vue-html": "html"
    },
    "emmet.triggerExpansionOnTab": true,
    "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "editor.suggestSelection": "first",
    "editor.linkedEditing": true,
    "indentRainbow.colors": [
        "rgba(24, 78, 119,0.15)",
        "rgba(30, 96, 145,0.15)",
        "rgba(26, 117, 159, 0.15)",
        "rgba(22, 138, 173,0.15)",
        "rgba(52, 160, 164,0.15)",
        "rgba(82, 182, 154,0.15)",
        "rgba(82, 182, 154,0.1)",
        "rgba(82, 182, 154,0.05)",
        "rgba(82, 182, 154,0.025)"
    ],
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "editor.fontFamily": "JetBrains Mono, Cascadia Code, 'Courier New', monospace",
    "editor.lineHeight": 22,
    "editor.letterSpacing": 0.2,
    "prettier.tabWidth": 4,
    "editor.fontLigatures": true,
    "terminal.integrated.fontWeightBold": "bold",
    "terminal.integrated.fontFamily": "'CaskaydiaCove NF'",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-NoLogo"]
        }
    },
    "editor.fontSize": 13,
    "terminal.integrated.fontSize": 13,
    "debug.console.fontSize": 13,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "debug.openDebug": "openOnDebugBreak",
    "debug.internalConsoleOptions": "openOnSessionStart",
    "editor.wordWrap": "on",
    "git.openRepositoryInParentFolders": "never",
    "css.lint.unknownAtRules": "ignore",
    "scss.lint.unknownAtRules": "ignore",
    "gitlens.mode.active": "zen",
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "html": true
    },
    "material-icon-theme.folders.theme": "specific",
    "cSpell.userWords": [
        "formik"
    ],
    "git.confirmSync": false,
    "workbench.colorTheme": "Bearded Theme Oceanic Reversed",
    "files.autoSave": "afterDelay",
    "glassit.alpha": 245,
    "workbench.iconTheme": "icons"
}
